# =============================================================================
# POS MANAGEMENT SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control!
#
# Priority order: .env.local > .env.production > .env.development > .env
# =============================================================================

# -----------------------------------------------------------------------------
# ENVIRONMENT
# -----------------------------------------------------------------------------
NODE_ENV=development
# Options: development, production, test

# -----------------------------------------------------------------------------
# API CONFIGURATION (REQUIRED)
# -----------------------------------------------------------------------------
# Backend API base URL - points to your Django/FastAPI backend
NEXT_PUBLIC_API_BASE_URL=https://api.tritechtechnologyllc.com

# Alternative API base (fallback if NEXT_PUBLIC_API_BASE_URL not set)
NEXT_PUBLIC_API_BASE=https://api.tritechtechnologyllc.com

# Enable/disable API proxy mode (recommended: true for development)
# When true, requests go through Next.js API routes (/api/*)
# When false, requests go directly to backend API
NEXT_PUBLIC_USE_API_PROXY=true

# -----------------------------------------------------------------------------
# TENANT CONFIGURATION (REQUIRED)
# -----------------------------------------------------------------------------
# Your tenant's unique slug identifier
# This is used for multi-tenant API routing
NEXT_PUBLIC_TENANT_SLUG=extraction-testing

# Your tenant's UUID (if different from slug)
NEXT_PUBLIC_TENANT_ID=your-tenant-uuid

# Default branch ID for operations
NEXT_PUBLIC_DEFAULT_BRANCH_ID=your-default-branch-id

# -----------------------------------------------------------------------------
# AUTHENTICATION ENDPOINTS (OPTIONAL - uses defaults if not set)
# -----------------------------------------------------------------------------
# Customize authentication API endpoints if your backend uses different paths
# NEXT_PUBLIC_API_AUTH_LOGIN=/t/auth/login
# NEXT_PUBLIC_API_AUTH_PIN_LOGIN=/t/auth/pin-login
# NEXT_PUBLIC_API_AUTH_LOGOUT=/t/auth/logout
# NEXT_PUBLIC_API_AUTH_PROFILE=/t/auth/me
# NEXT_PUBLIC_API_AUTH_REFRESH=/t/auth/token/refresh
# NEXT_PUBLIC_API_AUTH_FORGOT_PASSWORD=/t/auth/forgot-password
# NEXT_PUBLIC_API_AUTH_RESET_PASSWORD=/t/auth/reset-password
# NEXT_PUBLIC_API_AUTH_CREATE_STAFF=/t/auth/create-staff
# NEXT_PUBLIC_API_AUTH_USERS=/t/auth/users

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
# Application name (displayed in UI)
NEXT_PUBLIC_APP_NAME="POS Management System"

# Company/organization name
NEXT_PUBLIC_COMPANY_NAME="Your Company Name"

# Support email
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourcompany.com

# Enable debug mode (shows additional logging)
NEXT_PUBLIC_DEBUG_MODE=false

# -----------------------------------------------------------------------------
# FEATURE FLAGS (OPTIONAL)
# -----------------------------------------------------------------------------
# Enable/disable specific features
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_REPORTS=true
NEXT_PUBLIC_FEATURE_INVENTORY=true
NEXT_PUBLIC_FEATURE_RECIPES=true
NEXT_PUBLIC_FEATURE_CUSTOMERS=true

# -----------------------------------------------------------------------------
# LOCALIZATION (OPTIONAL)
# -----------------------------------------------------------------------------
# Default timezone for the application
NEXT_PUBLIC_DEFAULT_TIMEZONE=Asia/Karachi

# Default currency
NEXT_PUBLIC_DEFAULT_CURRENCY=PKR

# Default locale
NEXT_PUBLIC_DEFAULT_LOCALE=en-US

# Date format (moment.js compatible)
NEXT_PUBLIC_DATE_FORMAT=YYYY-MM-DD

# Time format
NEXT_PUBLIC_TIME_FORMAT=HH:mm:ss

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES (OPTIONAL)
# -----------------------------------------------------------------------------
# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx
# NEXT_PUBLIC_SENTRY_ENVIRONMENT=production
# NEXT_PUBLIC_SENTRY_RELEASE=1.0.0

# LogRocket Session Replay
# NEXT_PUBLIC_LOGROCKET_APP_ID=your-app-id

# Stripe Payment Gateway
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Google Maps API
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIzaSyXXXXXXXXXXXXXXXXX

# Firebase (if using for push notifications)
# NEXT_PUBLIC_FIREBASE_API_KEY=xxx
# NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=xxx
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=xxx
# NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=xxx
# NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=xxx
# NEXT_PUBLIC_FIREBASE_APP_ID=xxx

# -----------------------------------------------------------------------------
# PERFORMANCE & OPTIMIZATION
# -----------------------------------------------------------------------------
# API request timeout (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=10000

# Enable service worker (PWA)
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=false

# Max file upload size (MB)
NEXT_PUBLIC_MAX_FILE_SIZE=10

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS (DEVELOPMENT ONLY)
# -----------------------------------------------------------------------------
# Enable React Query Devtools
NEXT_PUBLIC_ENABLE_REACT_QUERY_DEVTOOLS=false

# Enable performance monitoring in development
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# Mock API responses (useful for offline development)
NEXT_PUBLIC_MOCK_API=false

# -----------------------------------------------------------------------------
# SECURITY (PRODUCTION ONLY)
# -----------------------------------------------------------------------------
# Rate limiting
NEXT_PUBLIC_RATE_LIMIT_MAX_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW_MS=60000

# Session timeout (minutes)
NEXT_PUBLIC_SESSION_TIMEOUT=60

# -----------------------------------------------------------------------------
# INTERNAL CONFIGURATION (DO NOT MODIFY UNLESS NECESSARY)
# -----------------------------------------------------------------------------
# Next.js internal variables
# NEXT_PUBLIC_VERCEL_URL=your-app.vercel.app
# ANALYZE=false
# BUNDLE_ANALYZE=false

# =============================================================================
# NOTES FOR YOUR BACKEND TEAM:
# =============================================================================
# 1. All NEXT_PUBLIC_* variables are exposed to the browser
# 2. Never put secrets in NEXT_PUBLIC_* variables
# 3. The frontend expects these API response formats:
#    - Success: { success: true, data: {...} } or { status: "success", result: {...} }
#    - Error: { success: false, error: "message", errors: {...} }
# 4. All authenticated requests include:
#    - Authorization: Bearer <token>
#    - x-tenant-id: <tenant-slug>
# 5. API endpoints should be RESTful and follow standard HTTP methods
# 6. CORS must be configured to allow requests from this frontend domain
# =============================================================================

# =============================================================================
# SETUP INSTRUCTIONS:
# =============================================================================
# 1. Copy this file: cp .env.local.example .env.local
# 2. Fill in all REQUIRED variables with your actual values
# 3. Customize OPTIONAL variables as needed
# 4. Restart your development server: npm run dev
# 5. Verify configuration in the browser console (development mode only)
# =============================================================================
